<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shop"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.example.SignInPage"
            android:exported="true"
            android:label="@string/title_activity_sign_in_page"
            android:theme="@style/Theme.Shop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.SignUpPage"
            android:exported="false"
            android:label="@string/title_activity_sign_up_page"
            android:theme="@style/Theme.Shop" />
        <activity
            android:name="com.example.ChangePasswordPage"
            android:exported="false"
            android:label="@string/title_change_password"
            android:theme="@style/Theme.Shop" />
        <activity
            android:name="com.example.MainActivityJava"
            android:exported="false"
            android:label="SHOP"
            android:theme="@style/Theme.Shop"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.example.ToBasket"
            android:exported="false"
            android:label="SHOP"
            android:theme="@style/Theme.Shop"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="Chat.ToChat"
            android:exported="false"
            android:label="SHOP"
            android:theme="@style/Theme.Shop"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>