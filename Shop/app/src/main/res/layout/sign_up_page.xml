<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_page">

    <TextView
        android:layout_width="378px"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="100px"
        android:textColor="@color/bottom_page_textcolor"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="133px"
        android:layout_marginTop="253px"/>

    <TextView
        android:layout_width="208px"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:textSize="40px"
        android:textColor="@color/bottom_page_textcolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="136px"
        android:layout_marginTop="457px"/>

    <FrameLayout
        android:layout_width="811px"
        android:layout_height="106px"
        android:background="@drawable/registration_text_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="134px"
        android:layout_marginTop="528px">

        <ImageView
            android:layout_width="100px"
            android:layout_height="70px"
            android:src="@drawable/user_6764"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6px"/>
        <EditText
            android:id="@+id/signUP_name_EditText"
            android:layout_width="680px"
            android:layout_height="106px"
            android:layout_gravity="end"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_marginStart="20px"
            android:layout_marginEnd="10px"
            android:background="@android:color/transparent"
            android:hint="Full Name"
            android:textColorHint="@color/hint_color"/>
    </FrameLayout>

    <TextView
        android:layout_width="101px"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="40px"
        android:textColor="@color/bottom_page_textcolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="136px"
        android:layout_marginTop="713px"/>

    <FrameLayout
        android:layout_width="811px"
        android:layout_height="106px"
        android:background="@drawable/registration_text_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="134px"
        android:layout_marginTop="784px">

        <ImageView
            android:layout_width="100px"
            android:layout_height="70px"
            android:src="@drawable/mail"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6px"/>
        <EditText
            android:id="@+id/signUP_emailEditText"
            android:layout_width="680px"
            android:layout_height="106px"
            android:layout_gravity="end"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_marginStart="20px"
            android:layout_marginEnd="10px"
            android:background="@android:color/transparent"
            android:hint="Email Address"
            android:textColorHint="@color/hint_color"/>
    </FrameLayout>

    <TextView
        android:layout_width="185px"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="40px"
        android:textColor="@color/bottom_page_textcolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="136px"
        android:layout_marginTop="969px"/>

    <FrameLayout
        android:layout_width="811px"
        android:layout_height="106px"
        android:background="@drawable/registration_text_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="134px"
        android:layout_marginTop="1040px">

        <ImageButton
            android:id="@+id/sign_up_password_hide"
            android:layout_width="75px"
            android:layout_height="70px"
            android:src="@drawable/eye"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15px"/>
        <EditText
            android:id="@+id/signUP_passeordEditText"
            android:layout_width="680px"
            android:layout_height="106px"
            android:layout_gravity="end"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_marginStart="20px"
            android:layout_marginEnd="10px"
            android:background="@android:color/transparent"
            android:hint="Password"
            android:textColorHint="@color/hint_color"/>
    </FrameLayout>

    <CheckBox
        android:id="@+id/agree_checkBox_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="141px"
        android:layout_marginTop="1211px"/>
    <TextView
        android:layout_width="503px"
        android:layout_height="wrap_content"
        android:text="Agree with Terms and Conditions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="235px"
        android:layout_marginTop="1233px"
        android:textSize="32px"/>

    <Button
        android:id="@+id/signUp"
        android:layout_width="620px"
        android:layout_height="91px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="230px"
        android:layout_marginTop="1337px"
        android:background="@drawable/sign_in_button"
        android:text="CREATE ACCOUNT"
        android:textStyle="bold"
        android:textSize="35px"
        android:textColor="@color/text_edit_color"/>

    <TextView
        android:layout_width="398px"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="359px"
        android:layout_marginTop="1488px"
        android:text="Already Have an Account?"
        android:textSize="32px"
        android:textColor="@color/forgot_password"/>

    <Button
        android:id="@+id/login_to_account"
        android:layout_width="224px"
        android:layout_height="35px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="428px"
        android:layout_marginTop="1552px"
        android:background="@android:color/transparent"
        android:text="Login to Account"
        android:textSize="29px"
        android:textAllCaps="false"
        android:textColor="@color/sign_in_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>