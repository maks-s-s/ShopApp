<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="745px"
    android:layout_height="300px"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/style_for_delete_menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chose the time"
        android:layout_gravity="center_horizontal"
        android:textSize="37px"
        android:textColor="#1E1E1E"
        android:layout_marginTop="30px"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/days"
            android:layout_width="75px"
            android:layout_height="50px"
            android:background="#D9D9D9"
            android:layout_marginStart="84px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days"
            android:layout_gravity="center"
            android:layout_marginStart="15px"
            android:textColor="#1E1E1E"/>

        <EditText
            android:id="@+id/hours"
            android:layout_width="75px"
            android:layout_height="50px"
            android:background="#D9D9D9"
            android:layout_marginStart="40px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours"
            android:layout_gravity="center"
            android:layout_marginStart="15px"
            android:textColor="#1E1E1E"/>

        <EditText
            android:id="@+id/mins"
            android:layout_width="75px"
            android:layout_height="50px"
            android:background="#D9D9D9"
            android:layout_marginStart="40px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mins"
            android:layout_gravity="center"
            android:layout_marginStart="15px"
            android:textColor="#1E1E1E"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px">

        <Button
            android:id="@+id/undo_button"
            android:layout_width="150px"
            android:layout_height="70px"
            android:background="@android:color/transparent"
            android:text="Undo"
            android:textSize="30px"
            android:layout_marginStart="8px"
            android:textColor="#1E1E1E"/>

        <Button
            android:id="@+id/mute_button"
            android:layout_width="150px"
            android:layout_height="70px"
            android:background="@android:color/transparent"
            android:text="Mute"
            android:textSize="30px"
            android:textColor="#1E1E1E"
            android:layout_marginEnd="8px"
            android:layout_marginStart="400px"/>
    </LinearLayout>

</LinearLayout>