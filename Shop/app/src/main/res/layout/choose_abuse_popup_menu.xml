<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="750px"
    android:orientation="vertical"
    android:background="@drawable/style_for_delete_menu">

    <TextView
        android:layout_width="1000px"
        android:layout_height="wrap_content"
        android:text="Choose the reason"
        android:textSize="39px"
        android:textColor="#1E1E1E"
        android:padding="30px"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="35px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="40px">
            <CheckBox
                android:id="@+id/harassment_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50px" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harassment"
                android:textColor="#1E1E1E"/>
            <CheckBox
                android:id="@+id/spam_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="240px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spam"
                android:textColor="#1E1E1E"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/InappropriateContent_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inappropriate Content"
                android:textColor="#1E1E1E"/>
            <CheckBox
                android:id="@+id/HateSpeech_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hate Speech"
                android:textColor="#1E1E1E"/>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/description_editText"
        android:layout_width="800px"
        android:layout_height="242px"
        android:background="@color/white"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px">
        
        <Button
            android:id="@+id/undo_button"
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:background="@android:color/transparent"
            android:text="Undo"
            android:textSize="34px"
            android:layout_marginStart="8px"
            android:textColor="#1E1E1E"/>

        <Button
            android:id="@+id/abuse_button"
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:background="@android:color/transparent"
            android:text="Abuse"
            android:textSize="34px"
            android:textColor="#1E1E1E"
            android:layout_marginEnd="8px"
            android:layout_marginStart="500px"/>
    </LinearLayout>
</LinearLayout>