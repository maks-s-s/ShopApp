<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="470px"
    android:layout_height="420px">
<FrameLayout
    android:layout_width="343px"
    android:layout_height="266px"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">
    <ImageButton
        android:id="@+id/product_example"
        android:layout_width="343px"
        android:layout_height="266px"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:contentDescription="item_card"
        android:scaleType="fitXY"
        android:src="@drawable/user_6764" />

    <ImageButton
        android:id="@+id/make_favorite"
        android:layout_width="50px"
        android:layout_height="41px"
        android:layout_columnWeight="1"
        android:layout_gravity="end"
        android:layout_marginTop="5px"
        android:layout_marginEnd="5px"
        android:background="@android:color/transparent"
        android:contentDescription="item_card"
        android:scaleType="fitXY" />
</FrameLayout>

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="400px"
        android:layout_height="78px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62px"
        android:textColor="@color/desc_on_product_plate"
        android:text="Куртка детская 17 см 22см ультра мега крутая"
        android:textSize="32px"
        android:clickable="true"
        android:focusable="true"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15px"
        android:layout_marginStart="35px"
        android:textColor="@color/desc_on_product_plate"
        android:text="1148 $"
        android:textSize="36px"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/price_with_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20px"
        android:layout_marginBottom="15px"
        android:layout_toEndOf="@+id/price"
        android:text="1148 $"
        android:textColor="@color/price_with_sale_on_product_plate"
        android:textSize="36px"
        android:textStyle="bold" />
</RelativeLayout>